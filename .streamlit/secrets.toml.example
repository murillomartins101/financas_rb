# ========================================
# EXEMPLO DE CONFIGURAÇÃO - secrets.toml
# ========================================
#
# Este é um arquivo de EXEMPLO. Para usar:
# 1. Copie este arquivo para: .streamlit/secrets.toml
# 2. Preencha com suas credenciais REAIS
# 3. NUNCA faça commit do secrets.toml (já está no .gitignore)
#
# Para instruções detalhadas, consulte: docs/SETUP_GOOGLE_SHEETS.md
#

# ========================================
# ID DA PLANILHA DO GOOGLE SHEETS
# ========================================
# Copie da URL: https://docs.google.com/spreadsheets/d/SEU_ID_AQUI/edit
spreadsheet_id = "1TZDj3ZNfFluXLTlc4hkkvMb0gs17WskzwS9LapR44eI"

# ========================================
# CREDENCIAIS DA SERVICE ACCOUNT
# ========================================
# Obtenha estas informações do arquivo JSON baixado do Google Cloud Console
# Tutorial completo: docs/SETUP_GOOGLE_SHEETS.md
#
# IMPORTANTE:
# - Todos os campos abaixo são OBRIGATÓRIOS
# - Copie os valores EXATAMENTE como aparecem no arquivo JSON
# - O campo private_key deve incluir todas as quebras de linha (\n)
#
[google_credentials]
type = "service_account"
project_id = "seu-projeto-id"
private_key_id = "sua-private-key-id-aqui"

# ATENÇÃO: O private_key deve incluir as quebras de linha (\n)
# Exemplo correto:
# private_key = "-----BEGIN PRIVATE KEY-----\nMIIEvQIBADANBgk...\n-----END PRIVATE KEY-----\n"
#
# Ou use aspas triplas para melhor legibilidade:
# private_key = """-----BEGIN PRIVATE KEY-----
# MIIEvQIBADANBgkqhkiG9w0BAQEFAASC...
# -----END PRIVATE KEY-----
# """
private_key = "-----BEGIN PRIVATE KEY-----\nCOLE_SUA_CHAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----\n"

client_email = "seu-service-account@seu-projeto.iam.gserviceaccount.com"
client_id = "123456789012345678901"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "https://www.googleapis.com/robot/v1/metadata/x509/seu-service-account%40seu-projeto.iam.gserviceaccount.com"

# Campo opcional (recomendado para google-auth >= 2.15)
universe_domain = "googleapis.com"

# ========================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO JWT
# ========================================
# Segredo para gerar tokens JWT (troque por uma string aleatória segura)
# Você pode gerar uma com: python -c "import secrets; print(secrets.token_hex(32))"
[jwt]
secret_key = "TROQUE_ESTE_VALOR_POR_UMA_STRING_ALEATORIA_SEGURA_DE_64_CARACTERES"
algorithm = "HS256"
expire_hours = 8

# ========================================
# CONFIGURAÇÃO DE FONTE DE DADOS
# ========================================
# Define a fonte primária de dados e comportamento de fallback
[data_config]
# Fonte primária: "google" para Google Sheets, "excel" para Excel local
primary_source = "google"

# Permitir fallback para Excel se Google Sheets falhar
# true = fallback silencioso com warning (útil para desenvolvimento)
# false = falha explícita se fonte primária não estiver disponível (recomendado para produção)
allow_fallback = false

# ========================================
# INSTRUÇÕES PARA OBTER AS CREDENCIAIS
# ========================================
#
# 1. Acesse: https://console.cloud.google.com/
# 2. Crie ou selecione um projeto
# 3. Habilite as APIs:
#    - Google Sheets API
#    - Google Drive API
# 4. Crie uma Service Account em "APIs & Services" > "Credentials"
# 5. Baixe o arquivo JSON das credenciais
# 6. Copie os valores do JSON para este arquivo
# 7. Compartilhe sua planilha do Google Sheets com o client_email
#
# Tutorial completo: docs/SETUP_GOOGLE_SHEETS.md
#
