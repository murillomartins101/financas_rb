# ==============================================================================
# SECRETS.TOML - EXEMPLO DE CONFIGURAÇÃO
# ==============================================================================
# Este arquivo deve ser copiado para .streamlit/secrets.toml
# Execute: cp secrets.toml.example .streamlit/secrets.toml
#
# IMPORTANTE:
# - Nunca commit o arquivo .streamlit/secrets.toml (já está no .gitignore)
# - Substitua todos os valores de exemplo pelos seus valores reais
# - Mantenha este arquivo atualizado como referência para novos membros da equipe
# ==============================================================================

# ==============================================================================
# ID DA PLANILHA DO GOOGLE SHEETS
# ==============================================================================
# Você encontra o ID na URL da sua planilha:
# https://docs.google.com/spreadsheets/d/SEU_ID_AQUI/edit
spreadsheet_id = "SEU_SPREADSHEET_ID_AQUI"

# ==============================================================================
# CREDENCIAIS DA SERVICE ACCOUNT DO GOOGLE CLOUD
# ==============================================================================
# Para obter estas credenciais:
# 1. Acesse o Google Cloud Console (console.cloud.google.com)
# 2. Crie ou selecione um projeto
# 3. Habilite a API do Google Sheets
# 4. Crie uma Service Account
# 5. Gere uma chave JSON para a Service Account
# 6. Copie os valores do arquivo JSON para os campos abaixo
#
# ATENÇÃO: A private_key deve incluir \n para quebras de linha!
# Exemplo: "-----BEGIN PRIVATE KEY-----\nMIIE...\n-----END PRIVATE KEY-----\n"
#
# Guia completo: docs/SETUP_GOOGLE_SHEETS.md

[google_credentials]
type = "service_account"
project_id = "seu-projeto-id"
private_key_id = "sua-chave-privada-id"
private_key = "-----BEGIN PRIVATE KEY-----\nCOLE_AQUI_SUA_CHAVE_PRIVADA_COMPLETA\n-----END PRIVATE KEY-----\n"
client_email = "sua-service-account@seu-projeto.iam.gserviceaccount.com"
client_id = "123456789"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "https://www.googleapis.com/robot/v1/metadata/x509/sua-service-account%40seu-projeto.iam.gserviceaccount.com"
universe_domain = "googleapis.com"

# ==============================================================================
# CREDENCIAIS DE AUTENTICAÇÃO (USUÁRIOS DO SISTEMA)
# ==============================================================================
# Configure os usuários que terão acesso ao sistema
# 
# IMPORTANTE: Por padrão, o sistema usa senhas em texto claro para facilitar
# o desenvolvimento. Em produção, considere usar hashes de senha.
#
# Para gerar hashes de senha (opcional):
# 1. Execute: python tools/hash_passwords.py
# 2. Substitua as senhas pelos hashes gerados
# 3. Atualize o código em core/auth.py para usar hashes

[passwords]
# Formato: username = "senha" (desenvolvimento) ou "senha_hash" (produção)
admin = "senha_admin_aqui"
usuario1 = "senha_usuario1_aqui"
usuario2 = "senha_usuario2_aqui"

# ==============================================================================
# CONFIGURAÇÕES OPCIONAIS
# ==============================================================================

# Salt para hash de senhas (usado se implementar hash)
auth_salt = "seu_salt_customizado_aqui"

# Chave secreta para JWT (tokens de sessão)
jwt_secret = "sua_chave_jwt_secreta_aqui"
